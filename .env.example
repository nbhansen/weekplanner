# Required for staging and production docker-compose files.
# Copy this file to .env and fill in values before running:
#   docker compose -f docker-compose.staging.yml up --build

# --- Database ---
GIRAF_DB_USER=postgres
GIRAF_DB_PASSWORD=          # REQUIRED — set a strong password
GIRAF_DB_NAME=giraf_staging
GIRAF_DB_PORT=5432

# --- JWT Authentication ---
GIRAF_JWT_SECRET=           # REQUIRED — minimum 32 characters
GIRAF_JWT_ISSUER=Giraf
GIRAF_JWT_AUDIENCE=GirafApp

# --- API ---
GIRAF_API_PORT=5171

# --- Seed Data (staging only) ---
GIRAF_SEED_ENABLED=true
GIRAF_SEED_USER=false
GIRAF_SEED_PICTOGRAMS=true
